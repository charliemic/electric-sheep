{
    // Java Configuration
    "java.configuration.updateBuildConfiguration": "automatic",
    "java.import.gradle.enabled": true,
    "java.import.gradle.wrapper.enabled": true,
    // CRITICAL: Force Gradle to use Java 17 (not Java 24)
    // This will be auto-detected, but you can override if needed
    "java.import.gradle.java.home": null,
    "java.import.gradle.version": null,
    "java.configuration.runtimes": [],
    // Java runtime will be auto-detected from JAVA_HOME or system
    // To manually configure, uncomment and set path:
    // {
    //   "name": "JavaSE-17",
    //   "path": "/Library/Java/JavaVirtualMachines/jdk-17.jdk/Contents/Home",
    //   "default": true
    // }
    "java.compile.nullAnalysis.mode": "automatic",
    // Gradle Configuration - Force Java 17
    "gradle.java.home": null,
    // If Java 17 is not auto-detected, set this to your Java 17 path:
    // "gradle.java.home": "/Library/Java/JavaVirtualMachines/jdk-17.jdk/Contents/Home",
    // Kotlin Configuration
    "kotlin.languageServer.enabled": true,
    // File Exclusions (Hide from Explorer)
    // Rationale: Hide generated files and caches, but keep source code visible
    "files.exclude": {
        // Build artifacts
        "**/build": true,
        "**/bin": true,
        "**/gen": true,
        "**/out": true,
        "**/release": true,
        // Dependency directories
        "**/node_modules": true,
        // Cache directories (hidden for clarity)
        "**/.gradle": true,
        // Test artifacts
        "**/test-results": true,
        // System files
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        // IDE config (keep visible for reference)
        "**/.idea": false
    },
    // Search Exclusions (Exclude from Search)
    // Rationale: Improve search performance and reduce noise from generated files
    "search.exclude": {
        // Build artifacts
        "**/build": true,
        "**/bin": true,
        "**/gen": true,
        "**/out": true,
        "**/release": true,
        // Dependency directories
        "**/node_modules": true,
        "**/.gradle": true,
        // Test artifacts
        "**/test-results": true,
        "**/test-automation/test-results": true,
        // Git internals (performance)
        "**/.git/objects": true,
        "**/.git/logs": true,
        // Generated files
        "**/*.class": true,
        "**/*.dex": true,
        "**/*.apk": true,
        "**/*.aab": true,
        // Log files
        "**/*.log": true,
        // Temporary files
        "**/.build-info.tmp": true,
        "**/.test-info.tmp": true,
        // Security: Sensitive files (should not be indexed)
        "**/aws-credentials*.txt": true,
        "**/aws-credentials*.json": true,
        "**/cursor-bedrock-credentials*.txt": true,
        "**/.aws/credentials": true,
        "**/.aws/config.local": true,
        "**/local.properties": true,
        "**/keystore/**": true,
        "**/*.jks": true,
        "**/*.keystore": true,
        "**/supabase/.env": true,
        "**/supabase/.env.local": true
    },
    // File Watcher Exclusions (Performance)
    // Rationale: Reduce CPU usage by not watching frequently-changing directories
    "files.watcherExclude": {
        // Git internals (high frequency changes)
        "**/.git/objects/**": true,
        "**/.git/logs/**": true,
        "**/.git/subtree-cache/**": true,
        "**/.git/refs/**": true,
        // Build artifacts (high frequency changes)
        "**/build/**": true,
        "**/bin/**": true,
        "**/gen/**": true,
        "**/out/**": true,
        "**/release/**": true,
        // Dependency directories (large, rarely change)
        "**/node_modules/**": true,
        "**/.gradle/**": true,
        // Test artifacts (high frequency changes)
        "**/test-results/**": true,
        "**/test-automation/test-results/**": true,
        "**/test-automation/build/**": true,
        // Cache directories (high frequency changes)
        "**/.gradle/caches/**": true,
        "**/.gradle/daemon/**": true,
        // Generated schemas (if large)
        "**/app/schemas/**": true,
        // Temporary files
        "**/.build-info.tmp": true,
        "**/.test-info.tmp": true,
        "**/.build-watch.log": true,
        // Security: Sensitive files (should not be watched)
        "**/aws-credentials*.txt": true,
        "**/aws-credentials*.json": true,
        "**/cursor-bedrock-credentials*.txt": true,
        "**/.aws/credentials": true,
        "**/.aws/config.local": true,
        "**/local.properties": true,
        "**/keystore/**": true,
        "**/*.jks": true,
        "**/*.keystore": true,
        "**/supabase/.env": true,
        "**/supabase/.env.local": true
    },
    // Editor Settings
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    "editor.rulers": [
        100
    ],
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    // Kotlin Formatting
    "[kotlin]": {
        "editor.defaultFormatter": "fwcd.kotlin",
        "editor.tabSize": 4
    },
    // Markdown Settings (for extensive docs)
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        }
    },
    // YAML Settings (for feature flags, test scenarios)
    "[yaml]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true
    },
    // Shell Script Settings
    "[shellscript]": {
        "editor.tabSize": 2
    },
    // Python Settings (for scripts)
    "[python]": {
        "editor.tabSize": 4,
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    // Git Settings
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    // Terminal Settings
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.cwd": "${workspaceFolder}",
    // Breadcrumbs
    "breadcrumbs.enabled": true,
    "breadcrumbs.filePath": "on",
    // File Nesting
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.patterns": {
        "*.kt": "${capture}.kt.test, ${capture}Test.kt",
        "*.gradle.kts": "${capture}.gradle.kts, ${capture}.properties",
        "*.md": "${capture}.md, ${capture}*.md",
        "*.sh": "${capture}.sh, ${capture}.md",
        "*.py": "${capture}.py, ${capture}.md"
    }
}